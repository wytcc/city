html{
  width: 100%;
  height: 100%;
}
body{
  width: 100%;
  height: 100%;
}
.timeline-container{
  width: 100%;
  height: 100%;
  #timeline-map{
    width: 100%;
    height: 60%;
  }
  #timeline-timeline{
    width: 100%;
    height: 40%;
    svg{
      width: 100%;
      height: 100%;
    }
  }
}
.ui-brush {
  background:#f8f8f8;
  position:absolute;
  bottom:0;right:0;left:0;
  height:100px;
}
.brush .extent {
  stroke:#fff;
  fill-opacity:0.125;
  shape-rendering:crispEdges;
}